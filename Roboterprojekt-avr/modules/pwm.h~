    long newvalL;
    long newvalR;  
    
    int tmr_line;
    int val_L_linesearch;

// Timer1 overflow interrupt service routine
interrupt [TIM1_OVF] void timer1_ovf_isr(void)
{
  // Reinitialize Timer 1 value
  TCNT1L=0x9C;
  ipwmcounter++; 
  if (ipwmcounter>100)
    ipwmcounter=0;  
 if(ipwmcounter >= ipwmcompareleft){
 ENGINE_ENABLE_LEFT=0;  
  }else{
  ENGINE_ENABLE_LEFT=1;
  }        
 if(ipwmcounter >= ipwmcompareright){
 ENGINE_ENABLE_RIGHT=0;     
  }else{
  ENGINE_ENABLE_RIGHT=1;}
  
  
    if (tmr_line<3000){
  tmr_line++;}else{ 
  if(val_L_linesearch<30&&val_L_linesearch>0){
   val_L_linesearch++;
   tmr_line=0;
  }else{
   val_L_linesearch=1;
   tmr_line=0;
  }}
   
 
if(Wiipwmleft>0||Wiipwmright>0){
 if (tmr_wiipwm<200){
  tmr_wiipwm++;}else{ 
   Wiipwmleft--;  
   Wiipwmright--;
   tmr_wiipwm=0;
  }}else{
   Wiipwmleft=0;
   Wiipwmright=0;
   tmr_wiipwm=0;
  }
  
      
}



  
void pwmmaker(int min_light){
if((newvalL<255&&newvalL>-1)&&(newvalR<255&&newvalR>-1)&&((LIGHT_SENSOR_LEFT/5)>min_light)&&((LIGHT_SENSOR_RIGHT/5)>min_light)){
newvalL=LIGHT_SENSOR_LEFT/5;
newvalR=LIGHT_SENSOR_RIGHT/5;
}else{
 newvalL=0;
 newvalR=0;
}
}

  void movement(int left, int right, int dir_left, int dir_right){
  ipwmcompareleft=left; 
  ipwmcompareright=right; 
  ENGINE_DIRECTION_LEFT = dir_left;  
  ENGINE_DIRECTION_RIGHT = dir_right;
  }
  
  
  void  linefunc(){
  if (      LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT&&  LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=65;     
  if (     !LINE_DETECTOR_LEFT&& !LINE_DETECTOR_MID_LEFT&& !LINE_DETECTOR_MID_RIGHT&& !LINE_DETECTOR_RIGHT)detector_value_line=66;  
  if (     !LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT&&  LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=67;  
 // if (     !LINE_DETECTOR_LEFT&& !LINE_DETECTOR_MID_LEFT&&  LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=68;  
 // if (     !LINE_DETECTOR_LEFT&& !LINE_DETECTOR_MID_LEFT&& !LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=69;  
 // if (      LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT&&  LINE_DETECTOR_MID_RIGHT&& !LINE_DETECTOR_RIGHT)detector_value_line=70;  
 // if (      LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT&& !LINE_DETECTOR_MID_RIGHT&& !LINE_DETECTOR_RIGHT)detector_value_line=71;     
 // if (      LINE_DETECTOR_LEFT&& !LINE_DETECTOR_MID_LEFT&& !LINE_DETECTOR_MID_RIGHT&& !LINE_DETECTOR_RIGHT)detector_value_line=72; 
 // if (     !LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT&&  LINE_DETECTOR_MID_RIGHT&& !LINE_DETECTOR_RIGHT)detector_value_line=73; 
  if (      LINE_DETECTOR_LEFT&& !LINE_DETECTOR_MID_LEFT&& !LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=74; 
  if (     !LINE_DETECTOR_LEFT&&  !LINE_DETECTOR_MID_LEFT&& LINE_DETECTOR_MID_RIGHT&&  LINE_DETECTOR_RIGHT)detector_value_line=80; 
  if (      LINE_DETECTOR_MID_RIGHT&&  !LINE_DETECTOR_RIGHT&& LINE_DETECTOR_LEFT&&  LINE_DETECTOR_MID_LEFT)detector_value_line=81; 
}